<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:background="#D7C4F8"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ltmnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ltmnName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lutemonin nimi"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ltmnAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hyökkäys" />

        <TextView
            android:id="@+id/ltmnDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="puolustus" />

        <TextView
            android:id="@+id/ltmnHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hp / Hp" />

        <TextView
            android:id="@+id/ltmnExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exp" />

        <TextView
            android:id="@+id/ltmnStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="voitot / häviöt" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>